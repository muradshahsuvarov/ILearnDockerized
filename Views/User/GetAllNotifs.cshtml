@model IEnumerable<ILearnCoreV19.Areas.Identity.Data.ApplicationNotif>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<div style="height: 500px; overflow: auto;">
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Time
            </th>
            <th>
                Read
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Header)
                </td>
                <td>
                    @Html.Raw(item.Body)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsRead)
                </td>
                <td>
                    @{
                        /*
                        @Html.ActionLink("Edit", "Edit", new { id = item.UserID })
                        @Html.ActionLink("Details", "GetDetails", "User", new { id = item.UserID }, null)
                        @Html.ActionLink("Delete", "Delete", new { id = item.UserID })
                        */
                    }
                </td>
            </tr>
        }

    </table>
</div>
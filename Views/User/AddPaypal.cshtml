@model ILearnCoreV19.Areas.Identity.Data.ApplicationUser

@{
    ViewData["Title"] = "Add Paypal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div style="height: 500px; overflow: auto;">
    <p>Note that in case you save incorrect paypal account, student will not be able to make a payment.</p>
    <p>Please enter a valid paypall account!</p>
    <div class="container">
        <form action="AddPaypalAccount" method="POST" style="margin-top: 20%; margin-left: 40%">
            <input type="text" value="@Model.Paypal" name="paypal_email" style="
                   width: 100%;
                   padding: 12px 20px;
                   margin: 8px 0;
                   display: inline-block;
                   border: 1px solid #ccc;
                   border-radius: 4px;
                   box-sizing: border-box;
                   placeholder="Your Paypal account..." ; />
            <input type="submit" value="Add Paypal" style="background-color: #4CAF50; border: none; color: white; padding: 16px 32px; text-decoration: none; margin: 4px 2px; cursor: pointer;" />
        </form>
    </div>
    @*  *@
</div>

services:
  db:
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: 1Secure*Password1
    image: mcr.microsoft.com/mssql/server:2017-latest
    ports:
    - published: 1443
      target: 1443
  ilearncorev19:
    build:
      context: C:\Users\Murad\Desktop\ILearnCore
      dockerfile: Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: ILearnCoreV19
      target: base
    container_name: ILearnCoreV19
    depends_on:
      db:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages
    image: ilearncorev19:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  "/app/bin/Debug/netcoreapp3.0/ILearnCoreV19.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - target: 80
    tty: true
    volumes:
    - C:\Users\Murad\Desktop\ILearnCore:/app:rw
    - C:\Users\Murad\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\Murad\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\Murad\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Microsoft\Xamarin\NuGet:/root/.nuget/fallbackpackages:ro
    - C:\Users\Murad\.nuget\packages:/root/.nuget/packages:ro
    - C:\Users\Murad\Desktop\ILearnCore:/src:rw
version: '3.4'